{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "target": "es5",
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "alwaysStrict": true,
    "declaration": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "sourceMap": false,
    "strictNullChecks": true
  },
  "exclude": [
    "**/*.test.ts"
  ]
}
